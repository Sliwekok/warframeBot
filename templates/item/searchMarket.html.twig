{% extends('layouts/app.html.twig') %}

{% block content %}

    {% if items|length > 0 %}
            <div class="col-8 offset-2 searchedItems">
                <div class="col-7">
                    <div class="col-12 itemRow">
                        <div class="col-4">
                            <span>Username</span>
                        </div>
                        <div class="status col-3">
                            <span>In-game status</span>
                        </div>
                        <div class="price col-3">
                            <span>Price</span>
                        </div>
                    </div>
                    {% for item in items %}
                        <div class="col-12 itemRow">
                            <div class="username col-8">
                                <span>{{ item.user.ingame_name }}</span>
                            </div>
                            <div class="status col-3">
                                <span>{{ item.user.status }}</span>
                            </div>
                            <div class="price col-3 offset-1">
                                <span>{{ item.platinum }}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-4 offset-1">
                    <div class="col-12 picture">
                        <img src="https://raw.githubusercontent.com/wfcd/warframe-items/master/data/img/{{ wiki_url }}" alt="{{ item_name }}">
                    </div>
                    <div class="col-12 description">
                        desc
                    </div>
                </div>
            </div>

    {% else %}
        <div class="col-6 offset-3 text-center">
            <p><h2>Apparently there are no active offers of {{ item_name }}</h2></p>
        </div>
    {% endif %}

{% endblock %}