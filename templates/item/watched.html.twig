{% extends('layouts/app.html.twig') %}

{% block content %}

    {% if items_watched|length > 0 %}
        {% for item in items_watched %}
            <div class="col-3 orderPanel">
{# TODO: poprawic layout, dodac fotki, naprawic zamykanie sie modala od dodawnia itemu#}
                <div class="col-3 offset-9 orderMenagment">
                    <div class="col-6"><span class="editOrder edit tooltipButton" data-price='{{item.price}}' data-item='{{item.name}}' data-platform='{{item.platformid}}' data-tooltip-placement="top" data-title="Delete from watchlist"><i class="icon icon-pencil"></i></span></div>
                    <div class="col-6"><span class="editOrder delete deleteWatched tooltipButton" data-item='{{item.name}}' data-platform='{{item.platformid}}' data-tooltip-placement="top" data-title="Edit price of order"><i class="icon icon-cancel"></i></span></div>
                </div>
                <div class="col-12"><p class="itemname"><a href="{{ url('item_add') }}">{{item.name}}</a></p></div>
                <div class="col-12"><p class="price">Price: {{item.price}} platinum</p></div>
            </div>
        {% endfor %}
    {% else %}
        <div class="col-6 offset-3 text-center">
            <p><h2>Add items to watch-list to start!</h2></p>
        </div>
    {% endif %}

{% endblock %}